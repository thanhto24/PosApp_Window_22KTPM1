<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App.View.Pages.HomeScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App.View.Pages"
    xmlns:model="using:App.Model"
    xmlns:converters="using:App.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:PriceConverter x:Key="PriceConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Thanh menu chọn loại đồ uống -->
        <Grid Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Danh mục" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
                <ListView x:Name="DrinkCategoryList" SelectionChanged="DrinkCategoryList_SelectionChanged">
                    <ListViewItem Content="Cà phê"/>
                    <ListViewItem Content="Sinh tố"/>
                    <ListViewItem Content="Nước ép"/>
                    <ListViewItem Content="Trà sữa"/>
                    <ListViewItem Content="Đồ ăn vặt"/>
                </ListView>
            </StackPanel>
        </Grid>

        <!-- Danh sách sản phẩm -->
        <Grid Grid.Column="1" Background="White">
            <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Danh sách sản phẩm" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
                    <ListView x:Name="ProductListView" ItemsSource="{Binding Products}" SelectionMode="None">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0, 0, 0, 10" CornerRadius="10" Width="150">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Image Source="{Binding ImagePath}" Width="100" Height="100" Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding Price}" FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Padding="5" Background="Black">
                                            <Button Content="-" Width="30" Click="DecreaseQuantity_Click"/>
                                            <TextBlock Text="{Binding Quantity}" FontSize="16" Margin="10, 4, 10, 0"/>
                                            <Button Content="+" Width="32" Click="IncreaseQuantity_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Phần cuối -->
        <Grid Grid.Column="2" Background="#FFE5B47C">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Background="#E8EBFA" Foreground="Black" Padding="8, 6" CornerRadius="8" Margin="5, 10, 0, 0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE72D;" FontSize="16"/>
                        <TextBlock Text="Mang đi" FontSize="14" FontWeight="Bold" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="2" Background="Black" Padding="8" Margin="0, 10, 5, 0">
                    <FontIcon Glyph="&#xE716;" FontSize="16"/>
                </Button>
            </Grid>

            <TextBox Grid.Column="1" PlaceholderText="Nhập tên/email để tìm kiếm" Background="Black" BorderThickness="0" VerticalAlignment="Top" Padding="6, 8, 12, 0" FontSize="12" Margin="7, 60, 7, 0"/>
            
            <TextBlock x:Name="OrderSummaryText" Text="Các món order (0 món)" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="10, 110, 0, 0" Foreground="Black"/>

            <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" MaxHeight="250" Margin="0, 60, 0, 0">
                <ListView x:Name="OrderListView" ItemsSource="{Binding OrderedProducts}" Margin="10, 0, 10, 0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" Foreground="Black" 
                           Grid.Column="0" HorizontalAlignment="Left"/>

                                <TextBlock Text="{Binding Quantity}" FontSize="14" Foreground="Black"
                           Grid.Column="1" HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
