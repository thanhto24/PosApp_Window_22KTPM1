<Page
    x:Class="App.View.Pages.AllOrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:App.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Bộ lọc -->
        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <CheckBox Content="Ngày tạo" IsChecked="True" Grid.Column="0" VerticalAlignment="Center"/>
            <CalendarDatePicker Width="200" Grid.Column="1" HorizontalAlignment="Left"/>
            <CheckBox Content="Lọc theo giờ kinh doanh" Grid.Column="2" VerticalAlignment="Center"/>
        </Grid>

        <!-- Thanh tìm kiếm và nút thao tác -->
        <Grid Grid.Row="1" Margin="0,10,0,10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Bộ lọc" Background="Orange" Grid.Column="0" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="SearchBox" Grid.Column="1" PlaceholderText="Tìm kiếm đơn hàng hoặc thông tin khách hàng" HorizontalAlignment="Stretch"/>
            <ComboBox Grid.Column="2" PlaceholderText="Chọn một mục" HorizontalAlignment="Stretch"/>
            <Button Content="Xem" Background="Orange" Grid.Column="3" HorizontalAlignment="Stretch"/>
        </Grid>


        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,10">
            <Button Content="Thao tác đơn hàng" IsEnabled="False" Width="150"/>
            <Button Content="Nhập xuất Excel" Width="150"/>
        </StackPanel>

        <!-- Danh sách đơn hàng -->
        <ListView x:Name="OrderListView" Grid.Row="3" BorderThickness="1" BorderBrush="Gray"
                  HorizontalAlignment="Stretch" Width="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{x:Bind OrderViewModel.orders}">
            <ListView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="#" Grid.Column="0" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="MÃ HÓA ĐƠN" Grid.Column="1" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="KHÁCH HÀNG" Grid.Column="2" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="NGÀY GIỜ BÁN HÀNG" Grid.Column="3" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="NHÂN VIÊN BÁN HÀNG" Grid.Column="4" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="TỔNG TIỀN" Grid.Column="5" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="TỔNG GIẢM GIÁ" Grid.Column="6" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="TỔNG THANH TOÁN" Grid.Column="7" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="TỔNG GIÁ VỐN" Grid.Column="8" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="THANH TOÁN" Grid.Column="9" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="TRẠNG THÁI" Grid.Column="10" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="TRẠNG THÁI THANH TOÁN" Grid.Column="11" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="GHI CHÚ" Grid.Column="12" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Order">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Bind Id}" Grid.Column="0" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind InvoiceCode}" Grid.Column="1" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind Customer}" Grid.Column="2" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind SaleDateTime}" Grid.Column="3" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind Salesperson}" Grid.Column="4" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind TotalAmount}" Grid.Column="5" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind TotalDiscount}" Grid.Column="6" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind TotalPayment}" Grid.Column="7" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind TotalCost}" Grid.Column="8" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind PaymentMethod}" Grid.Column="9" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind Status}" Grid.Column="10" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind PaymentStatus}" Grid.Column="11" Padding="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind Notes}" Grid.Column="12" Padding="5" TextWrapping="Wrap"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Footer Pagination -->
        <Grid Grid.Row="4" Margin="0,10,0,0" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Nút "Trang trước" -->
            <Button Content="◀ Trước" Grid.Column="0" HorizontalAlignment="Left" Padding="10,5" Background="Orange"/>

            <!-- Số trang -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" Spacing="5">
                <Button Content="1" Width="40"/>
                <Button Content="2" Width="40"/>
                <Button Content="3" Width="40"/>
                <TextBlock Text="..." VerticalAlignment="Center"/>
                <Button Content="10" Width="40"/>
            </StackPanel>

            <!-- Nút "Trang sau" -->
            <Button Content="Sau ▶" Grid.Column="2" HorizontalAlignment="Right" Padding="10,5" Background="Orange"/>
        </Grid>

    </Grid>
</Page>